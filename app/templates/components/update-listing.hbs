{{yield}}
{{#if updateListingForm}}
<h1>Update {{listingToUpdate.title}}</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=listingToUpdate.title}}
      </div>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=listingToUpdate.author}}
      </div>
      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content" placeholder=listingToUpdate.content}}
      </div>
      <button {{action 'update' listingToUpdate}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateFormShow'}}>Update this Listing</button>
{{/if}}
