{{yield}}
{{#if addNewListing}}
<h1>New Listing</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title"}}
      </div>
      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content"}}
      </div>
      <button {{action 'saveListing'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'listingFormShow'}}>New Listing</button>
{{/if}}
